# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pub_sub_db
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Queue Configuration
DEVICE_QUEUE=device_messages
EXCHANGE_NAME=device_exchange
ROUTING_KEY=device.message

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false
API_V1_PREFIX=/api/v1

# Collector App Configuration
COLLECTOR_HOST=0.0.0.0
COLLECTOR_PORT=8000
COLLECTOR_RELOAD=false
COLLECTOR_MAX_MESSAGE_SIZE=1048576
COLLECTOR_BATCH_SIZE=100
COLLECTOR_BATCH_TIMEOUT=5
COLLECTOR_ENABLE_BATCH_PROCESSING=true
COLLECTOR_ENABLE_MESSAGE_VALIDATION=true
COLLECTOR_ENABLE_METRICS=true

# Consumer App Configuration
CONSUMER_WORKER_COUNT=1
CONSUMER_PREFETCH_COUNT=10
CONSUMER_MAX_RETRY_ATTEMPTS=3
CONSUMER_RETRY_DELAY=5
CONSUMER_CONSUMER_TAG=device_consumer
CONSUMER_AUTO_ACK=false
CONSUMER_HEARTBEAT_INTERVAL=30
CONSUMER_PROCESS_BATCH_SIZE=50
CONSUMER_PROCESS_TIMEOUT=30
CONSUMER_ENABLE_DEAD_LETTER_QUEUE=true
CONSUMER_ENABLE_MESSAGE_PERSISTENCE=true
CONSUMER_ENABLE_MONITORING=true
